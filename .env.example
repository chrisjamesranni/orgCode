# GeoGuard Environment Variables
# Copy this file to .env and fill in your own values for local development in VS Code

# Database Configuration
# If not provided, the app will default to using SQLite
# Uncomment and set this to use a different database (PostgreSQL, MySQL, etc.)
# DATABASE_URL=postgresql://username:password@localhost:5432/geoguard

# Flask Configuration
SESSION_SECRET=your-secret-key-change-me

# Email Configuration (for password reset functionality)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com